# App
APP_ENV=development
APP_DEBUG=true

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8787

# Database (PostgreSQL)
# Prefer DATABASE_URL; DB_* is supported for convenience.
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/kxl
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=kxl
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_MAX_CONNECTIONS=10

# Redis
# Prefer REDIS_URL; REDIS_* is supported for convenience.
REDIS_URL=redis://127.0.0.1:6379
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Session (Redis-based; API uses dedicated cookies)
SESSION_USER_COOKIE_NAME=kxl_user_session
SESSION_ADMIN_COOKIE_NAME=kxl_admin_session
SESSION_COOKIE_SECURE=false
SESSION_PREFIX=kxl_session:
SESSION_USER_TTL_SECONDS=604800
SESSION_ADMIN_TTL_SECONDS=7200

# Security
RATE_LIMIT_LOGIN_WINDOW_SECONDS=60
RATE_LIMIT_LOGIN_MAX_ATTEMPTS=20
RATE_LIMIT_UPLOAD_WINDOW_SECONDS=60
RATE_LIMIT_UPLOAD_MAX_REQUESTS=30
RBAC_CACHE_TTL_SECONDS=300

# Uploads
UPLOADS_DIR=uploads
UPLOAD_IMAGE_MAX_BYTES=10485760
UPLOAD_VIDEO_MAX_BYTES=524288000

# CORS
CORS_ALLOW_ORIGIN=*

